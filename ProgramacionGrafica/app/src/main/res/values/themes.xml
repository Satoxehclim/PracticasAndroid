<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base para el modo claro -->
    <style name="Base.Theme.ProgramacionGrafica" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Fondo y texto -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Botones y controles -->
        <item name="android:colorButtonNormal">@color/primary</item>
        <item name="android:colorControlHighlight">@color/accent</item>
        <item name="android:colorControlActivated">@color/alternative</item>

        <!-- Personalización del Spinner (texto blanco) -->
        <item name="android:spinnerStyle">@style/Widget.ProgramacionGrafica.Spinner</item>
        <item name="android:spinnerItemStyle">@style/Widget.ProgramacionGrafica.Spinner.Item</item>
        <item name="android:spinnerDropDownItemStyle">@style/Widget.ProgramacionGrafica.Spinner.DropDownItem</item>
    </style>

    <style name="Theme.ProgramacionGrafica" parent="Base.Theme.ProgramacionGrafica" />

    <!-- Estilos específicos para el Spinner -->
    <style name="Widget.ProgramacionGrafica.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">@color/primary</item> <!-- Fondo primary -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.ProgramacionGrafica.Spinner.Item" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item> <!-- Texto blanco -->
    </style>

    <style name="Widget.ProgramacionGrafica.Spinner.DropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/white</item> <!-- Texto blanco en dropdown -->
    </style>
</resources>