<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Titulo_Main"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/Id_et_Numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/ingrese_un_numero_editText"
                android:importantForAutofill="no"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColorHint="#546E7A"
                tools:ignore="VisualLintTextFieldSize" />

            <Button
                android:id="@+id/Id_btn_analizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_analizar"
                tools:ignore="VisualLintButtonSize" />

            <TextView
                android:id="@+id/Id_tv_Desarrollo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Desarrollo_Main" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>