<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2F2F"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Control de Motor"
        android:textColor="#2196F3"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Botón Conectar -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textColor="#2196F3"
        android:textSize="24sp"
        android:textStyle="bold"
        android:hint="Direccion IP" />

    <Button
        android:id="@+id/btnConectar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#2196F3"
        android:text="Conectar Wifi"
        android:textColor="#FFFFFF" />

    <!-- Contenedor de Botones de Control -->
    <LinearLayout
        android:id="@+id/controlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnEncender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:enabled="false"
            android:text="ENCENDER"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnApagar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#F44336"
            android:enabled="false"
            android:text="APAGAR"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Estado del Motor -->

    <!-- Datos de RPM -->

    <TextView
        android:id="@+id/estadoMotorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Estado: DESCONECTADO"
        android:textColor="#2196F3"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/frecuenciaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Frecuencia: 0 Hz"
            android:textColor="#2196F3"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rpmText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RPM: 0"
            android:textColor="#2196F3"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>