<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:id="@+id/id_space"
            android:layout_width="28dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Id_tv_cociente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                />

            <View
                android:id="@+id/id_LineaHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#94001B" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Id_tv_divisior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#94001B" />

        <TextView
            android:id="@+id/Id_tv_dividendo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:id="@+id/id_space2"
            android:layout_width="28dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Id_tv_Residuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="monospace" />
    </LinearLayout>


</LinearLayout>