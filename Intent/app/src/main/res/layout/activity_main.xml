<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="@string/titulo_ejemplo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"/>
    <TextView
        android:text="@string/escribir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/xet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionDone"/>
    <Button
        android:id="@+id/xbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aceptar" />

    <TextView
        android:text="Ejercicio 1: Resolver ecuacion de segundo grado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coeficiente_a" />

            <EditText
                android:id="@+id/Id_EditText_CoeficienteA"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal|numberSigned"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/Id_EditText_CoeficienteB"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coeficiente_b" />

            <EditText
                android:id="@+id/Id_EditText_CoeficienteB"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal|numberSigned"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/Id_EditText_CoeficienteC"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coeficiente_c" />

            <EditText
                android:id="@+id/Id_EditText_CoeficienteC"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal|numberSigned"
                android:imeOptions="actionDone"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/Id_btn_Ejercicio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resolver" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Ejercicio 2: Calcular el cociente de dos numeros y mostrarlos en pantalla"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Divisor" />

            <EditText
                android:id="@+id/Id_EditText_Divisor"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal|numberSigned"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/Id_EditText_Dividendo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dividendo" />

            <EditText
                android:id="@+id/Id_EditText_Dividendo"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal|numberSigned"
                android:imeOptions="actionDone"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/Id_btn_Ejercicio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resolver" />

</LinearLayout>